<Alloy>
    <View id="view">
    	<View id="container">
            <TextField id="textField">
                <KeyboardToolbar>
                    <Toolbar>
                        <Items>
                            <FlexSpace />
                            <Button id="done" onClick="onKeyboardDone">Done</Button>
                        </Items>
                    </Toolbar>
                </KeyboardToolbar>
            </TextField>
            <View id="controlsContainer" >
                <Label class="spinner" text="\uf077" onTouchstart="onSpinUp" />
                <Label class="spinner" text="\uf078" onTouchstart="onSpinDown" />
            </View>
        </View>
    </View>
</Alloy>