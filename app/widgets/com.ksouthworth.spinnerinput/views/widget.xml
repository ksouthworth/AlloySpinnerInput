<Alloy>
    <View id="view" onPostlayout="onPostLayout">
    	<View id="container">
            <TextField id="textField" onFocus="onTextFocus" onBlur="onTextBlur">
                <KeyboardToolbar>
                    <Toolbar>
                        <Items>
                            <FlexSpace />
                            <Button id="done" onClick="onKeyboardDone">Done</Button>
                        </Items>
                    </Toolbar>
                </KeyboardToolbar>
            </TextField>

            <View id="spinnerTrigger" onTouchstart="onShowSpinner">
                <Label class="iconFont" text="\uf07d" width="Ti.UI.FILL" height="Ti.UI.FILL" textAlign="center" />
            </View>
        </View>
    </View>
</Alloy>